<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hayato.myapplication.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BlueTooth_noneConnect"
        android:id="@+id/BT_data"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="SERVICE STOP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Stop_S"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        android:textAlignment="center"
        android:layout_below="@+id/Start_S"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Debug Start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Start_D"
        android:layout_below="@+id/Stop_S"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp"
        android:textSize="18sp" />

    <Button
        android:text="Service Start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Start_S"
        android:layout_marginTop="35dp"
        android:elevation="0dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_below="@+id/BT_data"
        android:layout_alignParentStart="true" />

    <Button
        android:text="DEBUG STOP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:id="@+id/Stop_D"
        android:layout_below="@+id/Start_D"
        android:layout_alignParentStart="true"
        android:textSize="18sp" />
</RelativeLayout>
